# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=multisystem_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/multisystem_db

# API Port
API_PORT=3001

# Database API Service Port
DATABASE_API_PORT=3002
DATABASE_API_URL=http://database:3002

# Frontend Ports
HUB_FRONTEND_PORT=3000
SHOPFLOW_FRONTEND_PORT=3003
WORKIFY_FRONTEND_PORT=3004

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3003,http://localhost:3004

# API URL for Frontends (usando nombre de servicio Docker)
# API Principal - Lógica de negocio (consumida por frontends)
NEXT_PUBLIC_API_URL=http://api:3001

# Database API - Gestión de base de datos (usada internamente por API Principal)
# Nota: Los frontends NO consumen directamente Database API
DATABASE_API_URL=http://database:3002

# URLs de módulos frontend (HTTP)
# Usadas por el hub para redirección/proxy a módulos
NEXT_PUBLIC_SHOPFLOW_URL=http://shopflow-frontend:3003
NEXT_PUBLIC_WORKIFY_URL=http://workify-frontend:3004

# Node Environment
NODE_ENV=development

